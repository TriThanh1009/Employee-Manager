@model QLNS.ViewModel.Systems.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
   
     <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>


    <!-- Section: Design Block -->
    <section class=" text-center text-lg-start">
        <style>
            .rounded-t-5 {
                border-top-left-radius: 0.5rem;
                border-top-right-radius: 0.5rem;
            }

            media (min-width: 992px) {
                .rounded-tr-lg-0

            {
                border-top-right-radius: 0;
            }

            .rounded-bl-lg-5 {
                border-bottom-left-radius: 0.5rem;
            }

            }
        </style>
       
        

        <div class="card mb-3">
            <div class="row g-0 d-flex align-items-center">
            
                <div class="col-lg-4 d-none d-lg-flex">
                    <img src="@("https://localhost:5088/user-content/login.png")" alt="Trendy Pants and Shoes"
                         class="ml-5  w-70 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" 
                         style="margin-top:30% ;margin-left:10%"/>
                </div>
                <div class="col-lg-8">
                    <div class="d-flex justify-content-end mb-5">
                        <div class="mr-auto " style="margin-left:28%;">
                        <h1 >Employee Manage</h1>
                        </div>
                        <button type="button" onclick="window.location.href='/Login/TimeKeeper'" class="btn btn-outline-info mr-4 ml-5" data-mdb-ripple-color="dark"> Time Keeper</button>
                        
                    </div>
                    <div class="card-body py-5 px-md-5">
                       
                        <form asp-action="Index" method="post">
                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input asp-for="account" type="text" id="form2Example1" class="form-control" />
                                <label asp-for="account" class="form-label" for="form2Example1">Account</label>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4 ">
                                <input asp-for="password" type="password" id="form2Example2" class="form-control" />
                                <label asp-for="password" class="form-label " for="form2Example2">Password</label>

                            </div>
                            @if (ViewBag.nguyen == -1)
                            {
                                <div class="alert alert-warning alert-dismissible fade show">
                                    <button type="button" style=" border: none;background-color: #fff3cd " class="close" data-dismiss="alert">×</button>
                                    <strong>Warning!</strong> Your account or password is wrong
                                </div>
                            }
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block mb-4 ">Sign in</button>

                        </form>

                    </div>
                </div>
            </div>
        </div>


    </section>

    <div class="modal fade" id="dialog1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Chuyển Hướng Trang </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    Bạn muốn chuyển hướng sang trang nào
                </div>

                <div class="modal-footer d-flex justify-content-center">
                    <button type="button" class="btn btn-secondary">@Html.ActionLink("Trang Cá Nhân","information","Login",null,new {@class ="btn-link-login"})</button>
                    <button type="button" class="btn btn-primary">@Html.ActionLink("Trang Admin","Index","Home",null,new {@class ="btn-link-login"})</button>
                </div>

            </div>
        </div>
    </div>




    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    @if (ViewBag.nguyen == 1)
    {
        <script>
            $('#dialog1').modal('show')
        </script>
    }
</body>
</html>